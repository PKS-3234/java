import java.util.*;
class Main{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        String s1=sc.next();
        String s=s1.toLowerCase();
        char[] c=s.toCharArray();
        int vowelcount=0;
        for(int i=0;i<s.length();i++){
            char ch=c[i];
            if(ch=='a' || ch=='e' ||ch=='i' || ch=='o' ||ch=='u'){
                vowelcount++;
            }
        }
        System.out.println(vowelcount);
    }
}
