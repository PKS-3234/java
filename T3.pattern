import java.util.Scanner;
class Main{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        for(int i=1;i<=n;i++){
            int start=i*(i+1)/2;
            int currentstart=start;
            for(int j=1;j<=i;j++){
                System.out.print(currentstart+"*");
                currentstart--;
            }
           System.out.println(); 
        }
    }
}
